import { VerticalBox } from "std-widgets.slint";
export component ContentView
{
    in-out property <brush> backdrop-color: white.with-alpha(0.9);
    in-out property <brush> backdrop-border-color: black.with-alpha(0.1);

    padding: 0px;

    // backdrop
    Rectangle {
        width: parent.width;
        height: parent.height;
        background: backdrop-color;
        padding: 0px;
        border-color: backdrop-border-color;
        border-width: 1px;
        border-radius: 8px;
    }

    // clip the content
    Rectangle {
        width: parent.width;
        height: parent.height;
        padding: 0px;
        border-width: 0px;
        background: transparent;
        border-radius: 8px;
        clip: true;

        @children
    }
}
