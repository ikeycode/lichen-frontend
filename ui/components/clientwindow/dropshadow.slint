// Simple drop shadow component
export component DropShadow inherits Rectangle
{
    in-out property<brush> shadow-color: black.with-alpha(0.15);
    background: transparent;
    drop-shadow-blur: 8px;
    drop-shadow-color: shadow-color;
    drop-shadow-offset-x: 0px;
    drop-shadow-offset-y: 0px;
}
